{
	"compilerOptions": {
		"allowJs": false,
		"module": "NodeNext",
		"target": "ES2022",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "strictNullChecks": false,
	},
  "include": [
    "src",
    "src/.d.ts"
  ],
	"exclude": [
		"node_modules",
    "build",
	]
}
